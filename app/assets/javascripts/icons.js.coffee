colors =
  primary:   '#33AABB'
  secondary: '#CC4433'
  shadow:    '#726868'
  bg:        '#CCDDDD'

sizes =
  large:
    scale: 2
    width: 80
    height: 80
  medium:
    scale: 1.2
    width: 42
    height: 42
  small:
    scale: 0.8
    width: 24
    height: 24
  tiny:
    scale: 0.5
    width: 15
    height: 15

getClass = (elm, names) ->
  for name in names
    return name if elm.hasClass(name)

renderIcon = (elm, icon) ->
  size = sizes[getClass(elm, ['large', 'medium', 'small', 'tiny']) || 'medium']
  color = colors[getClass(elm, ['primary', 'secondary', 'shadow', 'bg']) || 'primary']
  hoverColor = if color == colors.primary then colors.secondary else colors.primary

  paper = Raphael(elm[0], size.width, size.height)

  hin = -> paper.icon.animate {fill: hoverColor}, 100
  hout = -> paper.icon.animate {fill: color}, 100

  paper.underlay = paper.rect(0, 0, size.width, size.height).attr(fill: '#000', 'fill-opacity': 0, stroke: 'none')
  paper.icon = paper.path(icon_paths[icon]).scale(size.scale, size.scale, 0, 0).attr(fill: color, stroke: 'none')

  unless elm.hasClass('no-hover') or navigator.userAgent.match(/android|iphone|ipad|ipod|blackberry/i)
    paper.underlay.hover(hin, hout)
    paper.icon.hover(hin, hout)

$ ->
  for icon of icon_paths
    $(".#{icon}-icon").each (index, elm) ->
      renderIcon $(elm), icon
