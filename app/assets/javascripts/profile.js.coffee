colors =
  primary:   '#33AABB'
  secondary: '#CC4433'
  shadow:    '#726868'
  bg:        '#CCDDDD'

colors.icon =
  normal:
    fill: colors.shadow
    stroke: 'none'
  hover:
    fill: colors.secondary
    stroke: 'none'
  role:
    fill: colors.secondary
    stroke: 'none'

hin = ->
  this.paper.icon.animate {fill: colors.icon.hover.fill}, 100

hout = ->
  this.paper.icon.animate {fill: colors.icon.normal.fill}, 100

for icon in ['edit', 'email', 'phone']
  $(".#{icon}-icon").each ->
    paper = Raphael(@, 42, 42)
    paper.rect(0, 0, 42, 42).attr(fill: '#000', 'fill-opacity': 0, stroke: 'none').hover(hin, hout)
    paper.icon = paper.path(icon_paths[icon]).scale(1.2, 1.2, 0, 0).attr(colors.icon.normal).hover(hin, hout)

$('.role-icon').each ->
  Raphael(@, 22, 22).path(icon_paths.role).scale(0.8, 0.8, -15, 0).attr(colors.icon.role)
