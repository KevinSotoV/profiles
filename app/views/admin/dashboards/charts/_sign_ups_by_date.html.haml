#sign_ups_by_date.admin-box.stat
  .inner
    %h3= t('admin.dashboard.charts.sign_ups_by_date.heading')
    .chart
    %p
      %a.show-data{:href => '#'}= t('admin.dashboard.charts.detail_link')
    %table.data
      %tbody
        - @stats.sign_ups_by_date.each do |date, profiles|
          %tr
            %td= date.to_s(:short)
            %td
              - profiles.each do |profile|
                .profile
                  = link_to profile.name, profile
              - if profiles.empty?
                %em= t('admin.dashboard.charts.sign_ups_by_date.no_data')
