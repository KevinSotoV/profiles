!!! 5
%head
  %title
    = s('site.name')
    - if @sub_title
      == / #{@sub_title}
  = stylesheet_link_tag    "bootstrap-1.3.0.min.css"
  = stylesheet_link_tag    "application"
  = javascript_include_tag "application"
  = csrf_meta_tags
%body

  .topbar
    .fill
      .container
        %h3
          %a{:href => '/'}= s('site.name')
        - if current_user
          %ul
            %li{:class => params[:controller] == 'profiles' && @profile && @profile.user == current_user && 'active'}
              %a{:href => my_profile_path}= t('nav.profile')
            %li{:class => params[:controller] == 'searches' && 'active'}
              %a{:href => new_search_path}= t('nav.search')
            %li
              = link_to t('nav.log_out'), destroy_user_session_path, :method => :delete
          %form{:action => search_path, :method => :get, :id => 'search-form'}
            %input{:name => 'q', :placeholder => t('nav.search_placeholder')}
        - else
          %ul
            %li{:class => params[:controller] == 'homes' && 'active'}
              = link_to t('nav.home'), root_path
            %li
              = link_to t('nav.log_in'), new_user_session_path

  #main
    .container{:class => @push_down == false ? nil : 'push-down'}
      - if (sidebar = yield(:sidebar)).to_s.blank?
        = flash_messages
        = yield
      - else
        .row
          .span12.columns
            = flash_messages
            = yield
          .span4.columns
            .sidebar= sidebar

  .container
    #footer
      == &copy; #{Date.today.year}, #{s 'community.name'} &middot;
      %a{'href' => '/pages/privacy_policy'}= t('pages.privacy_policy')
      &middot;
      = t('app.powered_by_html')
