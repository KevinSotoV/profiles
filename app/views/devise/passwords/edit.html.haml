%h2 Change your password

= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |form|
  = devise_error_messages!
  = form.hidden_field :reset_password_token

  = form.input :password, :hint => "New password"

  = form.input :password_confirmation, :hint =>"Confirm new password"
  %fieldset.actions
    = form.submit "Change my password"
