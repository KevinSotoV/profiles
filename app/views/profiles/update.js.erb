<% if @profile.errors.any? %>
  showAlert('error', '<%=j @profile.errors.full_messages.join('; ') %>');
<% else %>
  boxPos = $('#profile-box')[0].className;
  if(boxPos == "<%=j @profile.theme.box_pos %>") {
    $('.theme-stylesheet').addClass('old');
    var link = $("<%=j theme_stylesheet_link_tag %>");
    $('head').append(link);
    removeOldThemeStylesheet(link);
    $('#profile-box').html("<%=j render :partial => 'box' %>");
    renderMap();
  } else {
    location.href = '?tab=theme';
  }
<% end %>
