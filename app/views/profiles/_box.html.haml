.controls
  = link_to content_tag(:span, '', :class => 'edit-icon'), edit_profile_path(@profile), 'data-pjax' => '#aux', :title => t('profile.edit_button'), :class => 'btn small'
%h2.name
  = @profile.name
.content
  = profile_pic_tag(@profile)

  - if @profile.headline
    .headline= @profile.headline

  .links
    - if @profile.facebook_url
      = link_to simple_url(@profile.facebook_url), @profile.facebook_url, :class => 'facebook'
    - if @profile.phone
      = link_to @profile.phone, "tel:#{@profile.phone}", :class => 'phone'
  %br{:clear => 'left'}

  .bio
    = profile_bio(@profile)

  - if @profile.birthday
    %p= t('profile.birthday', :birthday => l(@profile.birthday, :format => :short))

