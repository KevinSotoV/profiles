- @title ||= @profile.name

- content_for :meta do
  %ul.icons
    - if can? :edit, @profile
      %li
        %a.edit-icon.shadow{:href => edit_profile_path(@profile), :title => t('profile.edit_button'), :class => 'has-tip'}
    %li
      %a.email-icon.shadow{:href => new_profile_message_path(@profile), :title => t('profile.links.message', :name => @profile.name), :class => 'has-tip'}
    - if @profile.phone
      %li
        %a.phone-icon.shadow{:href => "tel:#{@profile.phone}", :title => @profile.phone, :class => 'has-tip'}

#profile
  = profile_pic_tag(@profile)
  %span.name= @profile.name
  %br.hide-on-phones
  - if @profile.location.present?
    lives in
    %a.location{:href => '#'}= @profile.location
    %br.hide-on-phones
    and
  is a valuable part of
  %span.community= s('community.name')

  - if @profile.roles.any?
    .roles
      %ul
        - @profile.roles.each do |role|
          %li.role-icon.secondary.small.no-hover
            - if role.name.present?
              = t('profile.roles.specific_html', :role_name => role.name, :group_name => role.group.name, :group_url => url_for(role.group))
            - else
              = t('profile.roles.non_specific_html', :group_name => role.group.name, :group_url => url_for(role.group))

= javascript_include_tag 'http://maps.googleapis.com/maps/api/js?sensor=false'
= javascript_include_tag 'map'
